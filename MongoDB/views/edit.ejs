<%- include('partials/header') %>
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h2>Edit Data</h2>
        </div>
        
        <div class="card-body">
            <form action="" method="post">

                <div class="row mb-3">
                    <label for="id" class="col-sm-2 col-form-label">ID</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="id" name="id" placeholder="ID" value="<%= data._id %>" disabled/>
                    </div>
                  </div>
            
                <div class="row mb-3">
                  <label for="string" class="col-sm-2 col-form-label">String</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="string" name="string" placeholder="String" value="<%= data.string %>"/>
                  </div>
                </div>
            
                <div class="row mb-3">
                    <label for="integer" class="col-sm-2 col-form-label">Integer</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="integer" name="integer" placeholder="Integer" value="<%= data.integer %>"/>
                    </div>
                  </div>
            
                  <div class="row mb-3">
                    <label for="float" class="col-sm-2 col-form-label">Float</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="float" name="float" placeholder="Float" value="<%= data.float %>"/>
                    </div>
                  </div>
            
                  <div class="row mb-3">
                    <label for="date" class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-3">
                      <input type="date" class="form-control" id="date" name="date" placeholder="Date" value="<%= data.date %>"/>
                    </div>
                  </div>
            
                  <div class="row mb-3">
                    <label for="boolean" class="col-sm-2 col-form-label">Boolean</label>
                    <div class="col-sm-10">
                      <select name="boolean" class="form-select" id="boolean" >
                        <option selected disabled>Choose the boolean ...</option>
                        <option value="true" <%=data.boolean==1 ? 'selected' : '' %>>True</option>
                        <option value="false" <%=data.boolean==0 ? 'selected' : '' %>>False</option>
                      </select>
                     </div>
                  </div>
            
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i> Update</button>
                <a href="/" class="btn btn-warning"><i class="fa-solid fa-backward"></i> Back</a>

              </form>
        </div>

    </div>

  
</div>
<%- include('partials/footer') %>
